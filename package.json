{
  "name": "zero-login",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node ace serve --watch --encore-args=\"--port 8081\"",
    "dev-domain": "node ace serve --watch --encore-args=\"--port 8081 --https --allowed-hosts all --host webpack.zerologin.test\"",
    "build": "node ace build --production",
    "postbuild": "npm run asset && npm run env && npm run migrate",
    "asset": "cp build/public/assets/zerologin.*.js build/public/zerologin.js",
    "env": "cp .env build/",
    "migrate": "node ace migration:run --force",
    "start": "node server.js",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write ."
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.7.0",
    "@japa/preset-adonis": "^1.0.15",
    "@japa/runner": "^2.0.8",
    "@symfony/webpack-encore": "^2.1.0",
    "@vue/compiler-sfc": "^3.2.33",
    "adonis-preset-ts": "^2.1.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-adonis": "^2.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "pino-pretty": "^7.6.1",
    "prettier": "^2.6.2",
    "sass": "^1.51.0",
    "sass-loader": "^12.0.0",
    "typescript": "~4.6",
    "vue": "^3.2.14",
    "vue-loader": "^17.0.0",
    "youch": "^3.2.0",
    "youch-terminal": "^2.1.4"
  },
  "dependencies": {
    "@adonisjs/core": "^5.6.0",
    "@adonisjs/lucid": "^17.2.0",
    "@adonisjs/repl": "^3.1.0",
    "@adonisjs/session": "^6.2.0",
    "@adonisjs/shield": "^7.0.0",
    "@adonisjs/view": "^6.1.0",
    "@eidellev/inertia-adonisjs": "^6.2.0",
    "@element-plus/icons-vue": "^1.1.4",
    "@inertiajs/inertia": "^0.11.0",
    "@inertiajs/inertia-vue3": "^0.6.0",
    "core-js": "^3.22.6",
    "element-plus": "^2.2.1",
    "jose": "^4.8.1",
    "ky": "^0.30.0",
    "lnurl": "^0.24.1",
    "luxon": "^2.4.0",
    "pg": "^8.7.3",
    "proxy-addr": "^2.0.7",
    "qrcode": "^1.5.0",
    "reflect-metadata": "^0.1.13",
    "regenerator-runtime": "^0.13.9",
    "source-map-support": "^0.5.21"
  }
}
